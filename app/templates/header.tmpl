{{ define "header" }}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TLSRPT Analysis</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
  </head>
  <body>

  <nav class="navbar" role="navigation" aria-label="main navigation">

  <div class="navbar-brand has-text-weight-bold"><a class=navbar-item href="/">TLSRPT Analysis</a></div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item" href="/">
        Home
      </a>

      <a class="navbar-item">
        Documentation
      </a>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          More
        </a>

        <div class="navbar-dropdown">
          <a class="navbar-item">
            About
          </a>
          <a class="navbar-item is-selected">
            Jobs
          </a>
          <a class="navbar-item">
            Contact
          </a>
          <hr class="navbar-divider">
          <a class="navbar-item">
            Report an issue
          </a>
        </div>
      </div>
    </div>

    {{ if .user }}
    <div class="navbar-end">
      <div class="navbar-item">
      Hello, {{ .user.Email }}
      </div>
      <div class="navbar-item">
        <div class="buttons">
          <form action="/signout" method="post">
          <input class="button is-light" type="submit" value="Sign out">
          </form>
        </div>
      </div>
    </div>
    {{ else }}
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <a class="button is-primary" href="/signup">
            <strong>Sign up</strong>
          </a>
          <a class="button is-light" href="/signin">
            Log in
          </a>
        </div>
      </div>
    </div>
    {{ end }}
  </div>
</nav>

<section class="section p-6">

{{ end }}
